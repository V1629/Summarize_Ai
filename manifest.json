{
    "manifest_version": 3,
    "name": "Summarize_Ai",
    "version": "1.0",
    "description": "Simplifies webpage text for accessibility",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "host_permissions": ["<all_urls>"]
  }
  